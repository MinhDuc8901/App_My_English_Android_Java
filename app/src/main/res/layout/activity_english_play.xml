<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EnglishPlay">

    <TextView
        android:id="@+id/lbl_formular"
        android:layout_width="309dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_socre" />

    <TextView
        android:id="@+id/lbl_result"
        android:layout_width="290dp"
        android:layout_height="115dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_formular" />

    <TextView
        android:id="@+id/lbl_socre"
        android:layout_width="53dp"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_wrong"
        android:layout_width="105dp"
        android:layout_height="98dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_correct"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_result"
        app:srcCompat="@drawable/wrong" />

    <ImageView
        android:id="@+id/btn_correct"
        android:layout_width="108dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_result"
        app:srcCompat="@drawable/correct" />

    <ImageView
        android:id="@+id/btn_play_game"
        android:layout_width="121dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_result"
        app:srcCompat="@drawable/play" />

    <ImageView
        android:id="@+id/btn_out_game"
        android:layout_width="120dp"
        android:layout_height="114dp"
        android:layout_marginTop="32dp"
        android:background="#D16A6A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_result"
        app:srcCompat="@android:drawable/ic_menu_revert" />
</androidx.constraintlayout.widget.ConstraintLayout>